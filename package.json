		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.13",
		"@types/eslint": "8.56.7",
		"@types/ffmpeg": "^1.0.7",
		"@types/fluent-ffmpeg": "^2.1.24",
		"@types/jsonwebtoken": "^9.0.6",
