		"@tailwindcss/forms": "0.5.7",
		"@tailwindcss/typography": "0.5.12",
		"@types/eslint": "8.56.7",
		"@types/ffmpeg": "^1.0.7",
		"@types/fluent-ffmpeg": "^2.1.24",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/node": "20.12.2",
		"@types/showdown": "^2.0.6",
		"@typescript-eslint/eslint-plugin": "^7.16.0",
